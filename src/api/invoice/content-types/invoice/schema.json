{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "invoice_number": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "eway_bill_number": {
      "type": "string"
    },
    "purchase_order": {
      "type": "string"
    },
    "vehicle_number": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "component",
      "repeatable": true,
      "component": "invoice.invoice-item",
      "min": 1,
      "required": true
    },
    "total_quantity": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "total_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "transport_amount": {
      "type": "decimal",
      "required": false,
      "default": 0
    },
    "taxable_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "sgst_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "cgst_amount": {
      "required": true,
      "type": "decimal",
      "default": 0
    },
    "igst_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "round_off_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "invoice_amount": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "invoice"
    },
    "bill_to_company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "inversedBy": "billed_invoices"
    },
    "ship_to_company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "inversedBy": "shipped_invoices"
    }
  }
}
